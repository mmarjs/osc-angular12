{
  "extends": "../../tslint.json",
  "rules": {
    "deprecation": false,
    "directive-selector": [
      false,
      "attribute",
      "mat",
      "camelCase"
    ],
    "directive-class-suffix": false,
    "component-selector": [
      true,
      "element",
      "mat",
      "kebab-case"
    ],
    "component-class-suffix": false,
    "import-spacing": false,
    "interface-over-type-literal": false,
    "member-ordering": false,
    "no-duplicate-imports": false,
    "no-non-null-assertion": false,
    "no-input-rename": false,
    "no-output-rename": false,
    "object-literal-key-quotes": [
      true,
      "consistent"
    ],
    "prefer-const": false,
    "radix": false,
    "triple-equals": false,
    "use-input-property-decorator": false,
    "use-host-property-decorator": false,
    "max-line-length": [
      true,
      150
    ],
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "eofline": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-arg": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-bitwise": true,
    "no-shadowed-variable": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "member-access": [
      true,
      "no-public"
    ],
    "no-debugger": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "curly": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-preblock"
    ],
    "ban": [
      true,
      [
        "fit"
      ],
      [
        "fdescribe"
      ],
      [
        "xit"
      ],
      [
        "xdescribe"
      ],
      {
        "name": "Object.assign",
        "message": "Use the spread operator instead."
      }
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "no-namespace": true,
    "jsdoc-format": [
      true,
      "check-multiline-start"
    ],
    "contextual-life-cycle": true,
    "no-output-on-prefix": true,
    "use-life-cycle-interface": true
  },
  "linterOptions": {
    "exclude": [
      "!**/*"
    ]
  }
}