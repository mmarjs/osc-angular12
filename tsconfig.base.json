{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@ocean/animations": ["libs/animations/src/index.ts"],
      "@ocean/api": ["libs/api/src/index.ts"],
      "@ocean/api/*": ["libs/api/src/lib/*"],
      "@ocean/carousel": ["libs/carousel/src/index.ts"],
      "@ocean/client/*": ["apps/client/src/app/*"],
      "@ocean/common/*": ["apps/client/src/app/common/*"],
      "@ocean/components": ["libs/components/src/index.ts"],
      "@ocean/dialogs": ["libs/dialogs/src/index.ts"],
      "@ocean/documents": ["libs/documents/src/index.ts"],
      "@ocean/drafts": ["libs/drafts/src/index.ts"],
      "@ocean/features/bids": ["libs/features/bids/src/index.ts"],
      "@ocean/file-drop": ["libs/file-drop/src/index.ts"],
      "@ocean/forms-config": ["libs/forms-config/src/index.ts"],
      "@ocean/icons": ["libs/icons/src/index.ts"],
      "@ocean/internationalization": ["libs/internationalization/src/index.ts"],
      "@ocean/layout": ["libs/layout/src/index.ts"],
      "@ocean/layout/*": ["libs/layout/src/lib/*"],
      "@ocean/libs/form-builder": ["libs/form-builder/src/index.ts"],
      "@ocean/material": ["libs/material/src/index.ts"],
      "@ocean/shared": ["libs/shared/src/index.ts"],
      "@ocean/shared/*": ["libs/shared/src/lib/*"],
      "@ocean/storage": ["libs/storage/src/index.ts"],
      "@ocean/stripe": ["libs/stripe/src/index.ts"],
      "@ocean/testing": ["libs/testing/src/index.ts"],
      "@ocean/testing/*": ["libs/testing/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
